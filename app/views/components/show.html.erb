<h1><%= @component.name %></h1>
<ul>
  <% @component.lists.each do |list| %>
    <li>
      <%= list.state %>, <%= list.content %>  <%= link_to "edit", edit_list_path(list) %>
      <%= button_to list_path(list), method: :delete do %>
        delete
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "Add list", new_component_list_path(@component) %>
