<h1 class="mb-3"><%= @component.name %></h1>
  <% @component.lists.each do |list| %>
<ul>
    <div class="check">
      <li class="list"> <%= check_box_tag (:list)%>
      <%= label_tag %><%= list.content %> <%= link_to "edit", edit_list_path(list) %>
       <%= button_to list_path(list), method: :delete do %>
        delete
      <% end %>
      </li>
    </div>
  <% end %>
</ul>


<div class="button"><%= link_to "Add list", new_component_list_path(@component) %></div>
