<div class="main-container">
  <div class="form-container">
    <% model = checklist.new_record? ? [category, checklist] : [checklist] %>
    <%= simple_form_for model, html: { autocomplete: "off" } do |f| %>
    <h5><%= f.input :name %></h5>
    <div class="add-task-container">
      <% @category_checklist.errors.full_messages_for(:name) %>
      <%= f.input :end_date, as: :date, html5: true  %>
    </div>
    <div class="link-container">
      <div class="link">
        <%= f.submit "Save" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
