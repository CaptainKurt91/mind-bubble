    <% @items.each do |item| %>
      <li class="check">
        <div>
          <input class="check-item" type="checkbox"
                 data-id= <%=item.id%>
                 data-name= <%= @name %>
                 data-action="list-item#toggle"
                 data-list-item-target="state"
                 <% if item.state %> checked <% end %>>
          <%= item.title %>
        </div>

        <div class="edit-delete">
          <% if @name == "category" %>
