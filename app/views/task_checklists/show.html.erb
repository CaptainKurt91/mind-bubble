 <div class="main-tlist-ttl">
  <h1 class="tlist-ttl"><%= @task_checklist.name %></h1>
  <%= link_to "✏️", edit_task_checklist_path(@task_checklist) %>
  <%= button_to task_checklist_path(@task_checklist), method: :delete do %>
    🗑
  <% end %>
  </div>
 </div>

<div data-controller="task-item">
  <div class="progress-bar">
    <div data-task-item-target="progression" id="progression"></div>
  </div>


<ul class="list-items">

  <% @task_checklist.task_checklist_items.each do |item| %>
    <li class="check">

        <div>
          <input class="check-item task" type="checkbox"
                 data-id= <%=item.id%>
                 data-name= <%= @name %>
                 data-action="task-item#toggle"
                 data-task-item-target="state"
                 <% if item.state %> checked <% end %>>
          <%= item.description %>
        </div>

        <div class="edit-delete">
          <%= link_to "✏️", edit_task_checklist_task_checklist_item_path(item) %>
          <%= button_to task_checklist_item_path(item), method: :delete do %>
            🗑
          <% end %>
        </div>



      </li>
    <% end %>
  </ul>
  <div class="link-container">
    <div class="link">
      <%= link_to "Add item", new_task_checklist_task_checklist_item_path(@task_checklist) %>
    </div>
  </div>
