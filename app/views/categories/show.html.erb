<div class="bbl-container">
  <div class="top-display">
    <div class="top-lines">
        <div class="line-tp-lft" style="<%= "display: none;" if @category.tasks[0].nil? %>"></div>
        <div class="line-tp-cent" style="<%= "display: none;" if @category.tasks[1].nil? %>"></div>
        <div class="line-tp-right" style="<%= "display: none;" if @category.tasks[2].nil? %>"></div>
    </div>

    <%= link_to @category.tasks[0], class:"bottom", style:"text-decoration: none;" do %>
      <div class="bbl bbl-blue"  style="<%= "display: none;" if @category.tasks[0].nil? %>">
        <%= @category.tasks[0].name.capitalize %>
      </div>
    <% end %>

    <%= link_to @category.tasks[1], style:"text-decoration: none;" do %>
      <div class="bbl bbl-pink"  style="<%= "display: none;" if @category.tasks[1].nil? %>">
        <%= @category.tasks[1].name.capitalize %>
      </div>
    <% end %>

    <%= link_to @category.tasks[2], class:"bottom", style:"text-decoration: none;" do %>
      <div class="bbl bbl-yellow" style="<%= "display: none;" if @category.tasks[2].nil? %>">
        <%= @category.tasks[2].name.capitalize %>
      </div>
      <% end %>
  </div>

  <div class="main-bbl-container">
    <div class="main-bbl">
      <h1 class="main-title"><%= @category.name ? @category.name.capitalize : "Home" %></h1>
    </div>
  </div>

  <div class="bottom-display">
    <div class="btm-lines">
      <div class="line-btm-lft" style="<%= "border: none;" if @category.tasks[5].nil? %>"></div>
      <div class="line-btm-cent" style="<%= "background-color: #E8E7E2;" if @category.tasks[4].nil? %>"></div>
      <div class="line-btm-right" style="<%= "border: none" if @category.tasks[3].nil? %>"></div>
    </div>

    <%= link_to @category.tasks[5], style:"text-decoration: none;" do %>
      <div class="bbl bbl-red" style="<%= "display: none;" if @category.tasks[5].nil? %>">
        <%= @category.tasks[5].name.capitalize unless @category.tasks[5].nil? %>
      </div>
    <% end %>

    <%= link_to @category.tasks[4], class:"bottom", style:"text-decoration: none;" do %>
      <div class="bbl bbl-aqua" style="<%= "display: none;" if @category.tasks[4].nil? %>">
        <%= @category.tasks[4].name.capitalize unless @category.tasks[4].nil? %>
      </div>
    <% end %>

    <%= link_to @category.tasks[3], style:"text-decoration: none;" do %>
      <div class="bbl bbl-purple" style="<%= "display: none;" if @category.tasks[3].nil? %>">
        <%= @category.tasks[3].name.capitalize unless @category.tasks[3].nil? %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "Add a task", new_category_task_path(@category) %>
